{
  "name": "Call to action",
  "id": "cta",
  "icon": "fad fa-mouse-pointer",
  "category": "cta",
  "fields": [
    {
      "name": "Title",
      "id": "title",
      "type": "text",
      "default": "Get in touch"
    },
    {
      "name": "Slogan",
      "id": "slogan",
      "type": "text",
      "allow_empty": true
    },
    {
      "name": "Button label",
      "id": "button_label",
      "type": "text",
      "default": "Contact us"
    },
    {
      "name": "Button link",
      "id": "button_link",
      "type": "page_select",
      "default": []
    },
    {
      "name": "Enable URL parameter",
      "id": "enable_url_param",
      "type": "select",
      "default": "",
      "sync": true,
      "options": {
        "": "False",
        "true": "True"
      }
    },
    {
      "name": "URL parameter",
      "id": "url_param",
      "type": "text",
      "default": "",
      "allow_empty": true,
      "condition": {
        "enable_url_param": [
          "true"
        ]
      }
    },
    {
      "name": "Enable anchor link",
      "id": "enable_url_anchor",
      "type": "select",
      "default": "",
      "sync": true,
      "options": {
        "": "False",
        "true": "True"
      }
    },
    {
      "name": "Anchor link",
      "id": "anchor_link",
      "type": "text",
      "sync": true,
      "condition": {
        "enable_url_anchor": [
          "true"
        ]
      }
    }
  ]
}
